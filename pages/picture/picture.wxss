page{
  text-align: center;
}

.desc-textarea-box,
.imageRootAll,
button{
  width: 92% !important;
  margin: 20px auto;
  margin-bottom: 0;
  /* margin: 20px ; */
  border: 1px solid rgba(99,171,49,.6);
  box-shadow: 1px 1px 1px rgba(99,171,49,.6);
}
.imageRootAll,
.desc-textarea-box{
  background-color: rgb(99,171,49,.6);
  border: 1px solid rgb(99,171,49,.6);
  box-shadow: 1px 1px 1px rgb(99,171,49,.6);
  border-radius: 5px;
}
textarea{
  background-color: #fff;
  text-align: left;
}

.desc {
  margin-top: 25rpx;
  width: 98%;
  border: solid 1px gainsboro;
  margin: 1%;
  height: 150rpx;
}

.imageRootAll {
  margin-top: 30rpx;
  margin-bottom: 60rpx;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}


.imgItem {
  margin: 6rpx;
  position: relative;
  width: 176rpx;
  height: 176rpx;
  background: gainsboro;
}

.img {
  width: 100%;
  height: 100%;
}

.closeImg {
  position: absolute;
  right: 0px;
  width: 32rpx;
  height: 32rpx;
}

.photo {
  width: 50%;
  height: 50%;
  margin: 25%;
}
